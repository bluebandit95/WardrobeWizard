<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="text"
        android:text="First Name"
        android:textColor="#80FDFAFA"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="319dp" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="122dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="text"
        android:text="Last Name"
        android:textColor="#80FDFAFA"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="311dp" />

    <ImageView
        android:id="@+id/HeaderIMG"
        android:layout_width="431dp"
        android:layout_height="0dp"
        android:layout_marginBottom="74dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/LastName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/r"
        tools:layout_editor_absoluteX="-2dp" />

    <EditText
        android:id="@+id/email_Enter"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#80F8F5F5"
        app:layout_constraintBottom_toTopOf="@+id/Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email"
        app:layout_constraintVertical_bias="0.847" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#80FDFDFD"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="397dp"
        tools:text="Email" />

    <EditText
        android:id="@+id/password_Enter"
        android:layout_width="333dp"
        android:layout_height="42dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#80FAF9F9"
        app:layout_constraintBottom_toTopOf="@+id/ConfirmPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_Enter"
        app:layout_constraintStart_toStartOf="@+id/confirm_password_enter"
        app:layout_constraintTop_toBottomOf="@+id/Password" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="118dp"
        android:layout_height="37dp"
        android:text="TextView"
        android:textColor="#80FAF7F7"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="529dp"
        tools:text="Password" />

    <EditText
        android:id="@+id/confirm_password_enter"
        android:layout_width="341dp"
        android:layout_height="36dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#0B0000"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmPassword" />

    <TextView
        android:id="@+id/ConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#80FDFAFA"
        android:textColorHighlight="#0C0101"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="670dp"
        tools:text="Confirm Password" />

    <TextView
        android:id="@+id/Register"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="151dp"
        android:layout_height="51dp"
        android:selectAllOnFocus="false"
        android:text="Register"
        android:textColor="#8CFEFFFF"
        android:textColorHighlight="#03A9F4"
        android:textColorHint="#981616"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="251dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="181dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3E11BD"
        android:text="Create Account"
        android:textColor="#100000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_enter" />

</androidx.constraintlayout.widget.ConstraintLayout>